{
  "name": "lmv-ql",
  "version": "0.0.1-development",
  "description": "Smart filters for APS viewer",
  "types": "./build/types/index.d.ts",
  "main": "./build/index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "clean": "rimraf ./build",
    "clean:obj": "rimraf ./build/obj",
    "clean:types": "rimraf ./build/types/src",
    "build": "npm run clean && npm run build-engine && npm run compile && npm run bundle && npm run clean:obj && npm run clean:types",
    "build-engine": "npm run grammar && npm run compile && npm run bundle-functions && npm run transform-engine && npm run clean",
    "compile": "tsc -p ./tsconfig.json && npm run compile:copy-missing-js && npm run compile:copy-engine && npm run compile:copy-missing-d-ts",
    "compile:copy-missing-js": "copyfiles ./src/*.js ./build/obj",
    "compile:copy-missing-d-ts": "copyfiles ./src/*.d.ts ./build/types",
    "compile:copy-engine": "copyfiles ./engine.js ./build/obj",
    "bundle": "esbuild ./build/obj/index.js --bundle --outfile=./build/index.js --platform=browser --format=esm",
    "bundle-functions": "esbuild ./build/obj/propertyDatabaseFunctions.js --bundle --outfile=./build/obj/engine.js --platform=browser --format=iife --global-name=engine --minify",
    "transform-engine": "node ./tools/compileEngineModule.js",
    "prepack": "npm run build",
    "grammar": "ohm generateBundles src/*.ohm --withTypes",
    "test": "set TS_NODE_COMPILER_OPTIONS={\"module\":\"commonjs\"} && mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CADBIMDeveloper/LMV-QL.git"
  },
  "keywords": [
    "Autodesk Platform Services viewer",
    "Forge viewer",
    "filter"
  ],
  "author": "Alex Ignatovich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CADBIMDeveloper/LMV-QL/issues"
  },
  "homepage": "https://github.com/CADBIMDeveloper/LMV-QL#readme",
  "devDependencies": {
    "@ohm-js/cli": "^1.1.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.17.7",
    "mocha": "^10.2.0",
    "move-file-cli": "^3.0.0",
    "ohm-js": "^16.6.0",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
